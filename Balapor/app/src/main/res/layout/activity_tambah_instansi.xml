<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminInstansi.TambahInstansiActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_arrow_back"
        android:onClick="back"/>

    <TextView
        android:padding="15dp"
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Tambah Instansi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvInstansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etNamaInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInstansi"
        app:layout_constraintWidth_percent=".8"
        android:hint="Nama Instansi"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvErrorNamaInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Instansi Error"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaInstansi"
        android:visibility="invisible"
        />

        <EditText
            android:id="@+id/etNomorTelepon"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Nomor Telepon Instansi"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edit_text_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etNamaInstansi"
            />

    <TextView
        android:id="@+id/tvErrorNomorTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telpon Salah"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNomorTelepon"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/etAlamatInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNomorTelepon"
        android:hint="Alamat Instansi"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        />

    <TextView
        android:id="@+id/tvErrorAlamatInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi: Pria atau Wanita"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAlamatInstansi"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/etKecamatanInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAlamatInstansi"
        android:hint="Kecamatan Instansi"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        />

    <TextView
        android:id="@+id/tvErrorKecamatanInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kecamatan Instansi Error"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKecamatanInstansi"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/etKotaInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKecamatanInstansi"
        android:hint="Kota Instansi"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        />

    <TextView
        android:id="@+id/tvErrorKotaInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kecamatan Instansi Error"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKotaInstansi"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/etProvinsiInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKotaInstansi"
        android:hint="Provinsi Instansi"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        />

    <TextView
        android:id="@+id/tvErrorProvinsiInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provinsi Instansi Error"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etProvinsiInstansi"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/etKodePos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etProvinsiInstansi"
        android:hint="Kode Pos"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edit_text_bg"
        />

    <TextView
        android:id="@+id/tvErrorKodePos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provinsi Instansi Error"
        android:layout_marginLeft="50dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKodePos"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnTambahInstansi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKodePos"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Tambah Instansi"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:onClick="tambahData"
        />


<ProgressBar
android:id="@+id/pbComplete"
android:layout_width="75dp"
android:layout_height="75dp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
android:visibility="invisible"
    />

</androidx.constraintlayout.widget.ConstraintLayout>